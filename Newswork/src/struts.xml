<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<!-- Struts2的配置文件，需要配置自己建造的Action类。 dtd：约束文件中的标签规格， -->
<struts>

	<package name="c40" extends="json-default" namespace="/">
		<action name="login" class="Action.UserAction" method="checklogin">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
		</action>	
		<action name="checkname" class="Action.CheckNameaction" method="checkname">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
		</action>	
		<action name="register" class="Action.RegisterAction" method="doregister">
			<result name="success">/NewsBody.jsp</result>
		</action>
	</package>
</struts>
